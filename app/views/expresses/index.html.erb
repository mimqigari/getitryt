<div class="p-3 mb-2 bg-dark text-white">
<p id="notice"><%= notice %></p>

<h1>My Pickups</h1>

<table class="table table-dark table-hover table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Phone</th>
      <th>Package size (kg)</th>
      <th>Pickup address</th>
      <th>Delivery address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expresses.each do |express| %>
      <tr>
        <td><%= express.time_stamp %></td>
        <td><%= express.phone %></td>
        <td><%= express.package_size %></td>
        <td><%= express.pickup_address %></td>
        <td><%= express.delivery_address %></td>
        <td><%= link_to 'Show', express %></td>
        <td><%= link_to 'Edit', edit_express_path(express) %></td>
        <td><%= link_to 'Cancel', express, method: :delete, data: { confirm: 'Are you sure you want to cancel the pickup order?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Express Pickup', new_express_path %>
</div>