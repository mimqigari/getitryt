<%= form_with(model: express) do |form| %>
  <% if express.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(express.errors.count, "error") %> prohibited this express from being saved:</h2>

      <ul>
        <% express.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name %>
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.text_field :phone, placeholder:'08012345678' %>
  </div>

  <div class="field">
    <%= form.text_field :package_size, placeholder:'Package size in kg'  %>
  </div>

  <div class="field">
    <%= form.text_area :pickup_address, placeholder:'Pickup Address' %>
  </div>

  <div class="field">
    <%= form.text_area :delivery_address, placeholder:'Delivery Address' %>
  </div>

  <div class="field">
 <%= form.datetime_select :time_stamp %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
  </div>
<% end %>
